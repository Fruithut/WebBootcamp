<% include ./partials/header %>

        <div class="row justify-content-center">
            <div class="col-lg-12 text-center">
                <h1>Create a new campground</h1>
            </div>

            <div class="col-xs-12 col-md-6 col-lg-4">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label for="campName">Camp Name</label>
                        <input type="text" class="form-control" name="name" id="campName" aria-describedby="campName" placeholder="Camp Rock">
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" class="form-control" name="image" id="imageUrl" placeholder="https://..">
                    </div>
                    <button type="submit" class="btn btn-large btn-primary btn-block">Submit</button>
                </form>

                <a href="/campgrounds">Go Back</a>
            </div>
        </div>

<% include ./partials/footer %>
