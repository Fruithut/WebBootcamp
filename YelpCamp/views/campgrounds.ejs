<% include ./partials/header %>

        <header class="jumbotron jumbotron-fluid">
            <div class="container text-center">
                <h1>Campgrounds</h1>
                <p class="lead">View our selection of awesome campgrounds from all over the world</p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground</a>
            </div>
        </header>

        <div class="container">
            <div class="row">
            <% campgrounds.forEach(function (campground) { %>
                <div class="col-lg-3 col-sm-6 d-flex justify-content-center mb-4">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= campground.name %></h5>
                            <!--<a href="">More Info</a>-->
                        </div>
                    </div>
                </div>
            <% }) %>
            </div>
        </div>

<% include ./partials/footer %>