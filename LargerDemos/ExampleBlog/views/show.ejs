<% include ./partials/header %>

        <div class="ui raised very padded container segment">
            <div class="ui huge header">
                <%= blog.title %>
            </div>
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>">
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <!-- We can use '-' instead of '=' to
                         let content be executed as html,
                         but remember to sanitize input -->
                    <p><%- blog.body %></p>
                </div>
                <a href="/blogs/<%= blog._id %>/edit" class="ui orange basic button">Edit</a>
                <form id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>

<% include ./partials/footer %>